@model IEnumerable<ClinicaSys.Data.Models.Consulta>

@{
    ViewData["Title"] = "Listado Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Listado de consultas</h3>

<p>
    <a asp-action="Create">Nueva Consulta</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Medico
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            Fecha
        </th>
        <th>
            Paciente
        </th>
        <th>
            Descripción
        </th>
        <th>
            Costo
        </th>
        <th>
            Materiales
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Medico.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @{
                var fecha = item.Fecha.ToShortDateString();
            }
            @fecha
            @*@Html.DisplayFor(modelItem => item.Fecha)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoMateriales)
        </td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
        </td>
    </tr>
}
    </tbody>
</table>
