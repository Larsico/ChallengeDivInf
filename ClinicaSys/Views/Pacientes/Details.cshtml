@model ClinicaSys.Data.Models.Paciente

@{
    ViewData["Title"] = "Detalles de paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HistoriaClinica)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HistoriaClinica)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<h4>Consultas del paciente</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            Medico
        </th>
        <th>
            Tipo Consulta
        </th>
        <th>
            Fecha Consulta
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Costo Consulta
        </th>
        <th>
            Costo Materiales
            
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Consultas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @{ var fecha = item.Fecha.ToShortDateString(); }
                    @fecha
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostoMateriales)
                </td>
            </tr>
        }
    
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
